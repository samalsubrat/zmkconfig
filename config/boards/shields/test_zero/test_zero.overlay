#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/pinctrl/rp2040-pinctrl.h>


/ {
	chosen {
		zmk,kscan = &kscan0;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-direct", "waveshare_rp2040_zero";
		label = "KSCAN";

		input-gpios
			= <&gpio0 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 1 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 7 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&gpio0 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			;
	};
};

&i2c0 {
    status = "okay";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-names = "default";
    clock-frequency = <400000>;

    oled: ssd1306@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3c>;
        label = "DISPLAY";
        width = <128>;
        height = <64>;
        segment-offset = <0>;
        page-offset = <0>;
        display-offset = <0>;
        multiplex-ratio = <63>;
        segment-remap;
        com-invdir;
        prechargep = <0x22>;
    };
};

&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            pinmux = <RP2040_PINMUX(4, I2C0_SDA)
                      RP2040_PINMUX(5, I2C0_SCL)>;
        };
    };
};


